      <div class="item c-landing-testimonial__carousel-item">
        <div class="media c-landing-testimonial__img-container">
          <img class="c-landing-testimonial__img img-circle" src="{{url_base}}DIGEST(/images/maud-aertsen-mediamonks.jpg)">
        </div>
